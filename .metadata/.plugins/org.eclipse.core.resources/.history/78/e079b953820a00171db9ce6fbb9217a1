
public class Password {

	//atributos longitud y password
	private int longitud=8;
	private String password;
	
	//constructor vacío
	public Password(){}
	
	//Contructor con parámetros
	public Password(int longitud, String password){
		this.setLongitud(longitud);
		this.setPassword(password);
	}
	
	public Password(String password){
		this.setPassword(password);
	}
	
	//Setters	
	public void setLongitud(int length){
		this.longitud=length;
	}
	
	public void setPassword(String password){
		this.password=password;
	}
	
	
	
	//Getters
	public int getlongitud(){
			return this.longitud;
	}
	public String getPassword(){
			return this.password;
	}
	
	//métodos
	public void generarPassword(){
		String contraseña="";
		String letras="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789";
		for(int i=0; i>this.longitud; i++){
			int x=(int)(Math.random()*letras.length()+0);
			contraseña+=letras.charAt(x);
		}
	}
	
	public void generaLetra(){
		int x=(int) (99999999*Math.random()+10000000);
		char letra = generaLetra(x);
		this.dni = Integer.toString(x)+ letra;
	}
}
